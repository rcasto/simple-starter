{
  "name": "simple-starter",
  "version": "1.0.0",
  "description": "Simple starter setup for web projects",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all clean --parallel build:*",
    "build:scripts": "rollup --config rollup/rollup.config.js",
    "build:move": "cpy public/*.html dist --parents",
    "dev": "npm-run-all clean --parallel start build:move dev:*",
    "dev:build": "rollup --config rollup/rollup.config.dev.js --watch",
    "start": "node server.js",
    "clean": "rimraf dist"
  },
  "keywords": [],
  "author": "Richie Casto",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "cpy-cli": "^1.0.1",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-uglify": "^3.0.0"
  }
}
